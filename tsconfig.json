{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "dom",
            "es2015",
            "es2016"
        ],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "common*": [
                "src/common*"
            ],
            "core*": [
                "src/core*"
            ],
            "components*": [
                "src/components*"
            ],
            "configs*": [
                "src/configs*"
            ],
            "pages*": [
                "src/pages*"
            ],
            "@src*": [
                "src*"
            ],
        }
    }
}